<h3 class="text-center m-5">
  Live Preview Using Stimulus Reflex and Stimulus JS
</h3>
<div data-controller="preview">
  <div class="row justify-content-center">
    <div class="col-lg-4">
      <div class="form-group">
        <label>Enter Your Name:</label>
        <input type="text" class="form-control" name="name" />
      </div>
    </div>
  </div>


  <div class="row justify-content-center mt-3">
    <div class="col-lg-4">
      <div class="form-group">
        <label for="name">Body:</label>
        <textarea
          cols="30"
          rows="10"
          class="form-control"
          data-action="input->preview#live_previewJS focus->preview#typing blur->preview#typingEnd" data-preview-target="textValue"
        ></textarea>
      </div>
    </div>

    <div class="col-lg-3">
        <span data-preview-target="loading"></span>
      <p id="live_output" class="mt-4" ></p>
    </div>
  </div>
</div>

